package test;

//counting brackets
public class FirstTask {
	public static int Ci (int n, int k) {
		int res = 1;
		for (int i=n-k+1; i<=n; ++i){
			res *= i;
		}
		for (int i=2; i<=k; ++i){
			res /= i;
		}
		return res;
	}

	public static float find(int n){
		System.out.println("Ci  " + (float)Ci(2* n, n));
		float koef = 1/(n+1);
		float dn = koef * (float)Ci(2* n, n);
		/*for(int i = 0; i < n; i++){
			System.out.println("dn  " + dn);
			dn += Ci(n,i)*Ci(n, n-1-i);
		}*/
		
		return dn;
	}
	public static void main(String[] args) {
		int u = 3;
		System.out.println("answer: %d" + find(u));
	}

}
