package test;

//counting brackets
public class FirstTask {
	public static int dFinder(int n,int i){
		int dn = 0;
		 if (i == 0) {
             return 1;
         } else {
        	 
        	 for(int j = 0; j < n; j++){
     			System.out.println("dn  " + dn);
     			dn += dFinder(n,j)*dFinder(n, n-1-j);
     		}
             return dn;
         }
	}

	public static int find(int n){
		int dn = 0;
		for(int i = 0; i < n; i++){
			System.out.println("dn  " + dn);
			dn += dFinder(n,i)*dFinder(n, n-1-i);
		}
		return dn;
	}
	public static void main(String[] args) {
		int u = 3;
		System.out.println("answer:" + find(u));
	}

}
